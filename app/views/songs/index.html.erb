<h3> Songs for <%= link_to @album.name, album_path(@album) %><h3>
  <dl>
<% @songs.each do |song| %>
      <dt>
        Name
      </dt>
      <dd>
        <%= link_to song.title, album_song_path(@album, song) %>
      </dd>
      <dt>
        Artist
      </dt>
      <dd>
        <%= song.artist %>
      </dd>
      <dt>
        Duration
      </dt>
      <dd>
        <%= song.duration %>
      </dd>
      <dt>
        Price
      </dt>
      <dd>
        <%= song.price %>
      </dd>


<% end %>
</dl>
