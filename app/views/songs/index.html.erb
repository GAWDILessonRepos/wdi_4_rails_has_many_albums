<h3> Songs </h3>

<dl>
  <% @songs.each do |song| %>
    <dt> <%= song.title %> </dt>
    <dd>Artist <%= song.artist %> </dd>
    <dd>Duration <%= song.duration %> </dd>    
    <dd>Price <%= song.price%> </dd>        
    <dd>ID <%= song.id %> </dd>        
    <dd>Album <%= link_to song.album.name, @album %> </dd>   | <%= link_to 'Edit', edit_album_song_path(@album, song) %>
  <% end %>
</dl>


<%= link_to 'New Song', new_album_song_path(@album) %> 